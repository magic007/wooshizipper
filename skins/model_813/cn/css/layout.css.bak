html{background:#d7d7d7;color:#666;font:12px/1.5 tahoma, "Microsoft YaHei","微软雅黑";overflow-y:scroll;-ms-text-size-adjust:100%;-webkit-text-size-adjust:100%;}
body{margin:0;word-wrap:break-word;}
dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,button,select,textarea,p,blockquote,th,td,article,aside,canvas,details,embed,figure,figcaption,footer,header,hgroup,menu,nav,output,ruby,section,summary,time,mark,audio,video{margin:0;padding:0;}
fieldset,iframe{border:0 none;}
img{border:0 none;-ms-interpolation-mode:bicubic;vertical-align:middle;}
code,kbd,samp,tt,sup,sub,small,input,button,textarea,select{font-size:100%;font-weight:normal;}
h1,h2,h3,h4,h5,h6{font-size:14px;}
input,button,textarea,select,optgroup,option{font-family:inherit;font-size:inherit;font-style:inherit;font-weight:inherit;}
textarea{overflow:auto;vertical-align:top;resize:vertical;}
ol,ul,menu{list-style:none outside none;}
table{border-collapse:collapse;border-spacing:0;}
:active,:visited{outline:0;}
:link,:visited,ins{text-decoration:none;}
a,a:link{color:#666;text-decoration:none;}
a:hover{text-decoration:underline;}
input,select,button{vertical-align:middle;}
button{width:auto;cursor:pointer;overflow:visible;}

/*公共样式*/
.clearfix:before,.clearfix:after{content:'';display:table;}
.clearfix:after{clear:both;}
.clearfix{zoom:1;}
.clear{clear:both;display:block;overflow:hidden;height:0;}
.fr{float:right !important;}
.fl{float:left !important;}
.hidden{display:none !important;visibility:hidden;}
.pr{position:relative;}
.no_bg{background:none !important;}


/*背景集合*/
#nav,.nav_home,.search,.menu li a,.close{background:url(../img/sprites.png);}

/*框架*/
.container{width:980px;margin:0px auto;}

/*logo*/
#header_home{background:url(../img/head_bg.jpg);color:#fff;height:50px;overflow:hidden;padding:25px 0;zoom:1;}
#header{background:url(../img/head_bg.jpg) 0 -100px;color:#fff;height:50px;overflow:hidden;padding:25px 0;zoom:1;}
#logo{background:url(../img/logo.png);float:left;height:54px;text-indent:-999em;width:250px;}
.submenu a{color:#fff;margin:0 5px;}
.search{background-position:0 -122px;margin-top:10px;}
.search input,.search button{background:none;border:none;height:24px;}
.search input{padding-left:10px;width:137px;}
.search button{width:23px;}

/*导航*/
#nav{color:#fff;height:25px;line-height:25px;}
.nav_home{background-position:0 -25px !important;}
#nav li{background:url(../img/line.png) no-repeat;float:left;font-size:14px;text-align:center;}
#nav a{color:#fff;display:inline-block;width:100px;}
#nav .current,#nav a:hover{background:url(../img/icon.png) 0 4px;color:#fff100;text-decoration:none;}

/*子导航*/
.subnav ul{position:absolute;z-index:99;display:none;}
.suvnav_bg{background:#00a09f;height:25px;position:absolute;left:0;width:100%;}
#nav .subnav li{background:none;font-size:12px;}
#nav .subnav a{margin:0 5px;width:auto;}


/*banner*/
#banner img{height:auto;max-width:100%;width:auto;}

/*主内容*/
#content{padding-top:50px;}

/*内容导航 选项卡*/
.menu li,#products .bd li{float:left;}
.menu li a{background-position:0 -86px;display:inline-block;height:36px;line-height:36px;text-align:center;width:116px;}
.menu li a:hover,.menu li a.current{background-position:0 -50px;color:#fff;text-decoration:none;}

/*产品展示*/
#products{background:url(../img/products_bg.jpg) no-repeat center 0;padding:40px 0;}
#products .bd{margin:20px 0 0 -10px;overflow:hidden;}
#products .bd img{border:3px solid #e2e2e2;height:121px;margin:0 0 10px 10px;width:121px;}
#products .bd a:hover img,#products .bd .current{border:3px solid #79cccb;}

/*产品详细页*/
.popup{background:#fff;height:600px;left:50%;margin:-300px 0 0 -342px;padding:10px;position:absolute;top:50%;width:685px;}
.popup_text{float:left;height:550px;line-height:21px;margin-left:20px;padding:40px 10px 0 0;width:240px;}
.popup_text p{margin-bottom:20px;}
.close{background-position:-119px -50px; cursor:pointer;height:51px;position:absolute;right:-50px;top:0;width:51px;}

/*关于我们*/
#about{background:url(../img/about_bg.jpg) no-repeat center 0;padding:100px 0;}
.main{color:#fff;float:left;height:164px;line-height:24px;width:612px;}
.main a{color:#fff;}
.about_main{padding:70px 40px;}
.about_main p{text-indent:24px;}

/*联系我们*/
#contact{background:url(../img/contact_bg.jpg) no-repeat center 0;padding:100px 0;}
.contact_main{padding:40px 70px 40px 40px;width:582px;}


/*页脚*/
#footer,#footer_home{background:#057170;bottom:0;color:#fff;height:25px;line-height:25px;overflow:hidden;*position:absolute;position:fixed;width:100%;}
#footer_home{background:#07a694;}




/*1024屏幕下样式*/
@media screen and (max-width: 1024px) {

}
